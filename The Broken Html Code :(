    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Modal functions
        function showOrderModal(serviceName) {
            document.getElementById('selectedService').value = serviceName;
            document.getElementById('orderModalTitle').textContent = 'Order: ' + serviceName;
            var modal = new bootstrap.Modal(document.getElementById('orderModal'));
            modal.show();
        }

        function showConsultationModal() {
            showOrderModal('Request for Consultation');
        }

        function showProjectModal() {
            showOrderModal('Project Idea Submission');
        }

        function showSampleModal() {
            showOrderModal('Sample Submission');
        }

        function showInfoModal(center, info) {
            document.getElementById('infoModalTitle').textContent = center + ' Information';
            document.getElementById('infoModalBody').innerHTML = '<p>' + info + '</p>';
            var modal = new bootstrap.Modal(document.getElementById('infoModal'));
            modal.show();
        }

        function submitOrder() {
            alert('Order submitted successfully!');
            var modal = bootstrap.Modal.getInstance(document.getElementById('orderModal'));
            modal.hide();
        }

        // Search functionality
        document.getElementById('serviceSearch').addEventListener('input', function(e) {
            var searchTerm = e.target.value.toLowerCase();
            var services = document.querySelectorAll('.service-item');
            
            services.forEach(function(service) {
                var serviceText = service.textContent.toLowerCase();
                if (serviceText.includes(searchTerm)) {
                    service.style.display = 'block';
                } else {
                    service.style.display = 'none';
                }
            });
        });

        // Filter by center
        document.getElementById('centerFilter').addEventListener('change', function(e) {
            var selectedCenter = e.target.value;
            var categories = document.querySelectorAll('.service-category');
            
            categories.forEach(function(category) {
                if (!selectedCenter || category.getAttribute('data-center') === selectedCenter) {
                    category.style.display = 'block';
                } else {
                    category.style.display = 'none';
                }
            });
        });
    </script>
</body>
</html>'
   

server <- function(input, output)
shinyApp(ui = ui, server = server) '
